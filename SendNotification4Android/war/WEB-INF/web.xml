<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>receiveRegistrationIDServlet</servlet-name>
		<servlet-class>br.ufg.inf.integracao.sendnotification4android.server.ReceiveRegistrationIDServlet</servlet-class>
		<init-param>
			<param-name>regId</param-name>
			<param-value>0</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>notificacaoServlet</servlet-name>
		<servlet-class>br.ufg.inf.integracao.sendnotification4android.server.UsuarioServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>notificacaoServlet</servlet-name>
		<url-pattern>/sendnotification4android/nserv</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>receiveRegistrationIDServlet</servlet-name>
		<url-pattern>/sendID</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>SendNotification4Androids.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value />
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>

</web-app>
